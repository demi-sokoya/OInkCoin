        await Shell.Current.GoToAsync("//LoginPage");
    -->
    <!--<TabBar>
        <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    </TabBar>-->

    <MenuItem Text="Logout" StyleClass="MenuItemLayoutStyle" Clicked="OnMenuItemClicked">
    </MenuItem>

    <TabBar>
        <ShellContent Route="OverviewPage" ContentTemplate="{DataTemplate local:OverviewPage}"/>
    </TabBar>

    <TabBar>
        <ShellContent Route="AddNewTransactionPage" ContentTemplate="{DataTemplate local:AddNewTransactionPage}"/>
    </TabBar>

    <FlyoutItem Title="Overview">
        <ShellContent Route="OverviewPage" ContentTemplate="{DataTemplate local:OverviewPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Manage Categories">
        <ShellContent Route="EditCategoriesPage" ContentTemplate="{DataTemplate local:EditCategoriesPage}"></ShellContent>
    </FlyoutItem>

</Shell>
